<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<PackageId>Dewiride.Azure.Bot.Framework.Cards.Helper</PackageId>
		<Version>1.0.3</Version>
		<Authors>Dewiride</Authors>
		<Company>Dewiride Technologies Private Limited</Company>
		<Description>This package provides helper methods and an interface for interacting with Microsoft Bot Framework Supported Cards.</Description>
		<PackageTags>Microsoft Azure Bot Framework Cards</PackageTags>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<RepositoryUrl>https://github.com/DewirideTechnologies/dewiride-sdk-for-net</RepositoryUrl>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageProjectUrl>https://github.com/DewirideTechnologies/dewiride-sdk-for-net/blob/master/azure/bot/Dewiride.Azure.Bot.Framework.Cards.Helper/Dewiride.Azure.Bot.Framework.Cards.Helper/README.md</PackageProjectUrl>
		<PackageReleaseNotes>Added a new template for List Submit Action.</PackageReleaseNotes>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="AdaptiveCards.Templating" Version="2.0.5" />
		<PackageReference Include="Microsoft.Bot.Builder.Dialogs" Version="4.23.0" />
		<PackageReference Include="Microsoft.Bot.Schema" Version="4.23.0" />
	</ItemGroup>

	<ItemGroup>
		<None Include="README.md" Pack="true" PackagePath="\" />
	</ItemGroup>

	<ItemGroup>
	  <None Update="Templates\ListSubmitActionCard.json">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	</ItemGroup>
</Project>
